{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "custom.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}